<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dedyyarf.informasiabsensisiswa.InputNilai">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">


        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dip"
            android:text="Masukan Nilai Siswa"
            android:textSize="20dip" />


        <EditText
            android:id="@+id/edit_txt_tanggal"
            android:clickable="true"
            android:hint="Tanggal"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:editable="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:hint="Sesi Presensi"
                android:layout_margin="10dp"
                android:textSize="18dp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Sesi Pagi"
                    android:textSize="18dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Sesi Siang"
                    android:textSize="18dp"/>
            </RadioGroup>
        </LinearLayout>



        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_nama_siswa"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/textView1"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_Simpan"
                android:text="Simpan"
                android:background="#448AFF"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginStart="130dp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_Batal"
                android:text="Batal"
                android:background="#00555555"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
